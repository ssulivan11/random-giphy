{
  "name": "random-giphy",
  "description": "Chrome extention for a random giphy return in markup format for things like reddit, PRs, and MRs. Simply send it a list of random things to get random gifs.",
  "version": "2.0.0",
  "license": "ISC",
  "author": "ssulivan11",
  "repository": {
    "type": "git",
    "url": "https://github.com/ssulivan11/random-giphy"
  },
  "keywords": [
    "giphy"
  ],
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "compile": "tsc",
    "build": "webpack src/js/optionsPage.ts --o public/options.js --f iife -p",
    "zip": "tsc && rm -f randomGiphy.zip && zip -r randomGiphy.zip public",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write '**/*.{js,json,md}'",
    "test": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run format",
      "npm run lint"
    ]
  },
  "devDependencies": {
    "@types/chrome": "0.0.122",
    "@types/jest": "^26.0.8",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.3",
    "prettier": "^1.19.1",
    "ts-loader": "^8.0.2",
    "typescript": "^3.9.7",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 97,
        "branches": 100,
        "functions": 94,
        "lines": 100
      }
    }
  }
}
